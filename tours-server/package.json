{
  "name": "tours",
  "version": "1.0.0",
  "description": "An API to book tours",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon -L src/server.ts",
    "build": "tsc",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest",
    "lint": "eslint src --ext js,ts",
    "build:docs": "npm run build && api-extractor run --local && npx api-documenter markdown -i temp -o docs"
  },
  "author": "Gaurav Yadav",
  "license": "ISC",
  "dependencies": {
    "@types/validator": "^13.1.3",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.7",
    "morgan": "^1.10.0",
    "slugify": "^1.5.2",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.13.5",
    "@microsoft/api-extractor": "^7.15.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.6",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  }
}
